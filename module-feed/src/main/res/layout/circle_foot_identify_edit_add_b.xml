<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="62dp"
    android:layout_height="100dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <cool.dingstock.appbase.widget.IconTextView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/common_item_bg_gray_radius_4"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:text="@string/icon_add"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/circle_item_identify_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:textColor="#6A6F80"
            android:textSize="13sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/circle_item_identify_select_iv"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:background="@drawable/common_item_bg_dc_select_radius_4"
        android:visibility="gone" />


</RelativeLayout>