<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root_view"
    android:layout_height="wrap_content"
    android:background="@drawable/post_lottery_award_ing_bg"
    android:paddingBottom="15dp">


    <TextView
        android:id="@+id/award_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="60dp"
        android:text="一等奖"
        android:textColor="@color/color_text_black1"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/award_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="55dp"
        android:text="冰雪节限定球鞋冰雪节限定球鞋冰雪节限定球鞋冰雪节限定球鞋冰雪节限定球鞋冰雪节限定球鞋冰雪节限定球鞋"
        android:textColor="@color/color_text_black2"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/award_name_tv" />


    <TextView
        android:id="@+id/award_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/post_lottery_award_count_bg"
        android:paddingHorizontal="4dp"
        android:paddingVertical="1dp"
        android:text="1名"
        android:textColor="@color/color_blue"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/award_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/award_name_tv" />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_line"
        app:layout_constraintTop_toBottomOf="@id/award_name_tv" />

    <TextView
        android:id="@+id/winning_user_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="15dp"
        android:text="中奖用户："
        android:textColor="@color/color_text_black3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/award_end_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="line,winning_user_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>