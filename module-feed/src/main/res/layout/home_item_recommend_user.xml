<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_root"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginEnd="7dp"
    android:background="@drawable/common_item_bg_white_radius_8"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="盯链官方sfafafafafa"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/color_text_black1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="穿搭达人"
        android:textColor="@color/color_text_black4"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/post_follow_btn_sel"
        android:gravity="center"
        android:text="关注"
        android:textColor="@color/post_follow_btn_txt_color"
        android:textSize="12sp" />
</LinearLayout>
