<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cool.dingstock.appbase.widget.TitleBar
        android:id="@+id/home_gotem_titleBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:titleText="@string/gotem_title" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/home_gotem_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_gotem_titleBar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_gotem_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>