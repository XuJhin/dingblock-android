<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/bottom_dialog_margin_top"
    android:background="@drawable/monitor_center_regions_top_bg">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recommend_follow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom_recommend_bottom"
        android:layout_below="@id/title_bar_home_recommend" />

    <cool.dingstock.appbase.widget.TitleBar
        android:id="@+id/title_bar_home_recommend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_top_height"
        android:background="@color/transparent"
        app:leftIcon="@string/icon_close"
        app:leftIconColor="@color/color_text_black1"/>

    <LinearLayout
        android:id="@+id/layout_bottom_recommend_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="16dp"
        android:paddingEnd="25dp">

        <TextView
            android:id="@+id/btn_follow_selected"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="@drawable/common_black1_bg_c"
            android:gravity="center"
            android:text="@string/text_follow_recommend"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:id="@+id/bottom_bar_view"
            android:layout_width="0dp"
            android:layout_height="30dp" />
    </LinearLayout>

</RelativeLayout>