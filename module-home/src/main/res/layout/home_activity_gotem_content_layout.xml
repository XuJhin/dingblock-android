<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray">

    <cool.dingstock.appbase.widget.IconTextView
        android:id="@+id/home_activity_gotem_content_del_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/icon_edit_del"
        android:textSize="30sp" />

    <cool.dingstock.appbase.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/icon_gotem"
        android:textColor="@color/color_text_black1"
        android:textSize="200sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_activity_gotem_content_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        percent:layout_aspectRatio="100%"
        percent:layout_widthPercent="100%" />


    <TextView
        android:id="@+id/home_activity_gotem_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_activity_gotem_content_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="#3C3C3C"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/home_activity_gotem_content_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_activity_gotem_content_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="#3C3C3C"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/home_activity_gotem_content_share_txt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/home_gotem_content_share_bg"
        android:gravity="center"
        android:text="分享"
        android:textColor="@color/white"
        android:textSize="14sp" />


</androidx.percentlayout.widget.PercentRelativeLayout>