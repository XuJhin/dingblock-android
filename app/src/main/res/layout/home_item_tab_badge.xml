<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <cool.dingstock.appbase.widget.lottie.HomeIndexAniTab
        android:id="@+id/home_tab_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/home_tab_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/home_tab_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="首页"
        android:textColor="@color/selector_item_tab_color"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_tab_icon" />

    <View
        android:id="@+id/tag_unread"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_message_unread"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/home_tab_icon"
        app:layout_constraintTop_toTopOf="@+id/home_tab_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>