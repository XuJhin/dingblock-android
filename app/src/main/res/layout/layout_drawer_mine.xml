<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mine_drawer_rv"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="38dp"
        app:justifyContent="space_between">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/drawer_layout_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/drawer_mine_iv_layout"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_circle_f6f7f9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_svg_setting"
                    android:tint="@color/color_text_black1" />
            </FrameLayout>

            <TextView
                android:id="@+id/drawer_mine_tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="设置"
                android:textColor="@color/color_text_black2"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/drawer_mine_iv_layout"
                app:layout_constraintTop_toBottomOf="@+id/drawer_mine_iv_layout">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/drawer_layout_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/drawer_mine_iv_share"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_circle_f6f7f9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_svg_share"
                    android:tint="@color/color_text_black1" />
            </FrameLayout>

            <TextView
                android:id="@+id/drawer_mine_tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="分享"
                android:textColor="@color/color_text_black2"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/drawer_mine_iv_share"
                app:layout_constraintTop_toBottomOf="@+id/drawer_mine_iv_share">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/drawer_layout_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/drawer_mine_iv_customer"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_circle_f6f7f9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_svg_customer"
                    android:tint="@color/color_text_black1" />
            </FrameLayout>

            <TextView
                android:id="@+id/drawer_mine_tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="客服"
                android:textColor="@color/color_text_black2"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/drawer_mine_iv_customer"
                app:layout_constraintTop_toBottomOf="@+id/drawer_mine_iv_customer">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.flexbox.FlexboxLayout>


</RelativeLayout>