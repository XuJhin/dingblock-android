<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/task_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textColor="@color/color_text_black2"
        android:textSize="@dimen/text_size5"
        app:layout_constraintStart_toEndOf="@id/task_iv"
        app:layout_constraintTop_toTopOf="@id/task_iv"
        tools:text="发帖" />


    <ImageView
        android:id="@+id/help_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:padding="4dp"
        android:src="@drawable/mine_ic_icon_task_help"
        app:layout_constraintBottom_toBottomOf="@id/task_name"
        app:layout_constraintStart_toEndOf="@id/task_name"
        app:layout_constraintTop_toTopOf="@id/task_name" />

    <TextView
        android:id="@+id/task_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_text_black4"
        android:textSize="@dimen/text_size2"
        app:layout_constraintStart_toStartOf="@id/task_name"
        app:layout_constraintTop_toBottomOf="@id/task_name"
        tools:text="+1 积分" />

    <TextView
        android:id="@+id/task_action"
        android:layout_width="66dp"
        android:layout_height="26dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/mine_task_receive_bg"
        android:gravity="center"
        android:text="领取"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>