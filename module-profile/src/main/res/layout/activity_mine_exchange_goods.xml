<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    tools:context=".ui.exchange.good.MineExchangeGoodsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_bottom"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/mine_content_exchange_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_exchange_good_cover"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </com.google.android.material.imageview.ShapeableImageView>

                    <TextView
                        android:id="@+id/tv_exchange_good_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textColor="@color/color_text_black1"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_exchange_good_cover"
                        app:layout_constraintTop_toTopOf="@+id/iv_exchange_good_cover"
                        tools:text="3天盯链Vip" />

                    <TextView
                        android:id="@+id/tv_exchange_good_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:textColor="@color/color_text_black2"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_exchange_good_cover"
                        app:layout_constraintTop_toBottomOf="@+id/tv_exchange_good_title"
                        tools:text="3天盯链Vip" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/color_gray"></View>

                <TextView
                    android:id="@+id/tv_title_good_desc"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="商品介绍"
                    android:textColor="@color/color_text_black1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_content_good_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/color_text_black3"
                    android:textSize="13sp"
                    tools:text="51小长假已经结束，但是5月的发售才刚刚开始，AJ5流川枫已经预热，AJ1黑蓝AJ4白13gigi都将迎来发售，传闻本月月底TS 270终" />

                <TextView
                    android:id="@+id/tv_title_expire_date"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="有效期"
                    android:textColor="@color/color_text_black1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_content_expire_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/color_text_black3"
                    android:textSize="13sp"
                    tools:text="51小长假已经结束，但是5月的发售才刚刚开始，AJ5流川枫已经预热，AJ1黑蓝AJ4白13gigi都将迎来发售，传闻本月月底TS 270终" />

                <TextView
                    android:id="@+id/tv_title_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="使用说明"
                    android:textColor="@color/color_text_black1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/tv_content_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/color_text_black3"
                    android:textSize="13sp"
                    tools:text="51小长假已经结束，但是5月的发售才刚刚开始，AJ5流川枫已经预热，AJ1黑蓝AJ4白13gigi都将迎来发售，传闻本月月底TS 270终" />


                <TextView
                    android:id="@+id/tv_medal_preview"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="佩戴效果"
                    android:textColor="@color/color_text_black1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_suit_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/common_item_bg_gray_radius_8"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_condition">

                    <cool.dingstock.imagepicker.views.roundImageView.RoundImageView
                        android:id="@+id/iv_head"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/logo_dc_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:view_type="type_circle" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="咁咁咁"
                        android:textColor="@color/color_text_black1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_head"
                        app:layout_constraintTop_toTopOf="@+id/iv_head" />

                    <TextView
                        android:id="@+id/tv_user_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="1分钟前"
                        android:textColor="@color/color_text_black4"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_head"
                        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

                    <ImageView
                        android:id="@+id/iv_medal_preview"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/logo_dc_icon"
                        app:layout_constraintStart_toEndOf="@+id/tv_user_name"
                        app:layout_constraintTop_toTopOf="@+id/tv_user_name" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_address_title"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="收货地址"
                    android:textColor="@color/color_text_black1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_have_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_item_bg_gray_radius_8"
                        android:paddingBottom="15dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_address_logo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/icon_address"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:ellipsize="end"
                            android:maxWidth="120dp"
                            android:maxLines="1"
                            android:text="收货人收货人收货人收货人收货人收货人"
                            android:textColor="@color/color_text_black1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_address_logo"
                            app:layout_constraintStart_toEndOf="@+id/iv_address_logo"
                            app:layout_constraintTop_toTopOf="@+id/iv_address_logo" />

                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="+86 135681238213"
                            android:textColor="@color/color_text_black1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_address_logo"
                            app:layout_constraintStart_toEndOf="@+id/tv_name"
                            app:layout_constraintTop_toTopOf="@+id/iv_address_logo" />

                        <ImageView
                            android:id="@+id/iv_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/icon_next3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="2"
                            android:text="四川省成都市武侯区M78星云"
                            app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
                            app:layout_constraintStart_toStartOf="@+id/tv_name"
                            app:layout_constraintTop_toBottomOf="@+id/iv_address_logo" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_no_address"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/common_item_bg_gray_radius_8"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/icon_address"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/icon_address"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/tv_no_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="2"
                            android:text="点击添加收货地址"
                            android:textColor="@color/color_text_black1"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/iv_empty_icon_more"
                            app:layout_constraintStart_toEndOf="@+id/icon_address"
                            app:layout_constraintTop_toTopOf="parent" />


                        <ImageView
                            android:id="@+id/iv_empty_icon_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/icon_next3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:elevation="2dp"
            android:paddingStart="15dp"
            android:paddingTop="12dp"
            android:paddingEnd="15dp"
            android:paddingBottom="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mine_btn_exchange_good"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/selected_exchange_goods"
                android:enabled="true"
                android:text="立即领取"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <cool.dingstock.appbase.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/white" />


</RelativeLayout>