<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchange.record.MineExchangeRecordActivity">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/mine_refresh_exchange_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mine_exchange_record_titlebar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mine_rv_exchange_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <cool.dingstock.appbase.widget.TitleBar
        android:id="@+id/mine_exchange_record_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_top_height"
        android:layout_alignParentTop="true" />
</RelativeLayout>