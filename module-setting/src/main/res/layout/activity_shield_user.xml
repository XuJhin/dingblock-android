<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical"
    tools:context="cool.dingstock.setting.ui.shield.ShieldUserActivity">

    <cool.dingstock.appbase.widget.TitleBar
        android:id="@+id/title_bar_shield_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_top_height"
        android:background="@color/white"
        app:hideLine="true"
        app:leftIcon="@string/icon_back"
        app:titleText="@string/title_shield_account" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout_shield_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_setting_shield_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:overScrollMode="never" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>