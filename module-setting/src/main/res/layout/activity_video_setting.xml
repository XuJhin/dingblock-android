<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray">

    <cool.dingstock.appbase.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="视频和动图设置" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout style="@style/SettingItemGroupStyle">

                        <TextView
                            style="@style/SettingItemTextStyle"
                            android:text="在Wi-Fi下自动播放视频" />

                        <cool.dingstock.appbase.widget.switchbutton.SwitchButton
                            android:id="@+id/wifi_auto_play"
                            android:layout_width="51dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="15dp"
                            app:kswAnimationDuration="300"
                            app:kswBackDrawable="@drawable/ios_back_drawable"
                            app:kswThumbColor="@color/color_text_absolutely_white" />

                    </FrameLayout>

                    <FrameLayout style="@style/SettingItemGroupStyle">

                        <TextView
                            style="@style/SettingItemTextStyle"
                            android:text="在移动网络下自动播放" />

                        <cool.dingstock.appbase.widget.switchbutton.SwitchButton
                            android:id="@+id/cellular_auto_play"
                            android:layout_width="51dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="15dp"
                            app:kswAnimationDuration="300"
                            app:kswBackDrawable="@drawable/ios_back_drawable"
                            app:kswThumbColor="@color/color_text_absolutely_white" />

                    </FrameLayout>

                    <FrameLayout style="@style/SettingItemGroupStyle">

                        <TextView
                            style="@style/SettingItemTextStyle"
                            android:text="默认打开视频声音" />

                        <cool.dingstock.appbase.widget.switchbutton.SwitchButton
                            android:id="@+id/default_open_sound"
                            android:layout_width="51dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="15dp"
                            app:kswAnimationDuration="300"
                            app:kswBackDrawable="@drawable/ios_back_drawable"
                            app:kswThumbColor="@color/color_text_absolutely_white" />

                    </FrameLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout style="@style/SettingItemGroupStyle">

                        <TextView
                            style="@style/SettingItemTextStyle"
                            android:text="在Wi-Fi下自动播放动图" />

                        <cool.dingstock.appbase.widget.switchbutton.SwitchButton
                            android:id="@+id/wifi_auto_gif"
                            android:layout_width="51dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="15dp"
                            app:kswAnimationDuration="300"
                            app:kswBackDrawable="@drawable/ios_back_drawable"
                            app:kswThumbColor="@color/color_text_absolutely_white" />

                    </FrameLayout>

                    <FrameLayout style="@style/SettingItemGroupStyle">

                        <TextView
                            style="@style/SettingItemTextStyle"
                            android:text="在移动网络下自动播放动图" />

                        <cool.dingstock.appbase.widget.switchbutton.SwitchButton
                            android:id="@+id/cellular_auto_gif"
                            android:layout_width="51dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="15dp"
                            app:kswAnimationDuration="300"
                            app:kswBackDrawable="@drawable/ios_back_drawable"
                            app:kswThumbColor="@color/color_text_absolutely_white" />

                    </FrameLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>