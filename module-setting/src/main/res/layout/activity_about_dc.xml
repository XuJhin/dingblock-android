<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titleBar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical">

    <cool.dingstock.appbase.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        titleBar:titleText="@string/setting_about_dingstock" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_dc_icon" />

    <TextView
        android:id="@+id/version_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_text_black4"
        android:textSize="@dimen/text_size5"
        tools:text="当前版本 V2.0.0" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        titleBar:cardBackgroundColor="@color/white"
        titleBar:cardCornerRadius="8dp"
        titleBar:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/userAgreementFra"
                style="@style/SettingItemGroupStyle">

                <TextView
                    style="@style/SettingItemTextStyle"
                    android:text="用户协议" />

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/SettingItemNextArrowStyle"
                    android:src="@drawable/common_svg_right_arrow"
                    titleBar:tint="@color/color_text_black5" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/privacyPolicyFra"
                style="@style/SettingItemGroupStyle">

                <TextView
                    style="@style/SettingItemTextStyle"
                    android:text="隐私政策" />


                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/SettingItemNextArrowStyle"
                    android:src="@drawable/common_svg_right_arrow"
                    android:tint="@color/color_text_black5" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_permission"
                style="@style/SettingItemGroupStyle">

                <TextView
                    style="@style/SettingItemTextStyle"
                    android:text="应用权限" />


                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/SettingItemNextArrowStyle"
                    android:src="@drawable/common_svg_right_arrow"
                    android:tint="@color/color_text_black5" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_msg_list"
                style="@style/SettingItemGroupStyle">

                <TextView
                    style="@style/SettingItemTextStyle"
                    android:text="个人信息收集清单" />


                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/SettingItemNextArrowStyle"
                    android:src="@drawable/common_svg_right_arrow"
                    android:tint="@color/color_text_black5" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/three_party_list"
                style="@style/SettingItemGroupStyle">

                <TextView
                    style="@style/SettingItemTextStyle"
                    android:text="第三方信息共享清单" />

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/SettingItemNextArrowStyle"
                    android:src="@drawable/common_svg_right_arrow"
                    android:tint="@color/color_text_black5" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/joinUsFra"
                style="@style/SettingItemGroupStyle">

                <TextView
                    style="@style/SettingItemTextStyle"
                    android:text="加入我们" />

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/SettingItemNextArrowStyle"
                    android:src="@drawable/common_svg_right_arrow" />
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>