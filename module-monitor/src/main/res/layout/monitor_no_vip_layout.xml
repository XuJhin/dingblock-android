<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/monitor_detail_vip_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_vip">


        <TextView
            android:id="@+id/tv_monitor_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="未开通会员无法收到推送提醒，以下为历史监控信息"
            android:textColor="@color/color_text_black4"
            android:textSize="12sp"
            android:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_establis_vip"
        android:layout_width="76dp"
        android:layout_height="32dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/common_red_bg_radius_20"
        android:gravity="center"
        android:text="开通会员"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vip"
        app:layout_constraintEnd_toEndOf="@+id/iv_vip"
        app:layout_constraintStart_toStartOf="@+id/iv_vip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text=" 开通盯链会员查看实时监控"
        android:textColor="#242933"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_establis_vip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_vip" />

</androidx.constraintlayout.widget.ConstraintLayout>