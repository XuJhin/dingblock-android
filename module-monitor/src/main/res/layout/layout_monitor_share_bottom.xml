<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/share_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_monitor_share"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:text="@string/share_to"
        android:textColor="@color/color_text_absolutely_white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp">

        <cool.dingstock.monitor.widget.ShareItemView
            android:id="@+id/share_wechat"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:share_icon="@drawable/icon_share_wechat_dark"
            app:share_title="微信好友" />

        <cool.dingstock.monitor.widget.ShareItemView
            android:id="@+id/share_moment"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:share_icon="@drawable/icon_share_moment_dark"
            app:share_title="微信朋友圈" />

        <cool.dingstock.monitor.widget.ShareItemView
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:share_icon="@drawable/icon_share_qq_dark"
            app:share_title="QQ" />

        <cool.dingstock.monitor.widget.ShareItemView
            android:id="@+id/save_image"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:share_icon="@drawable/icon_share_download"
            app:share_title="保存图片" />
    </LinearLayout>

</LinearLayout>