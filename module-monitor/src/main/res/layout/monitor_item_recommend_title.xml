<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/monitor_shape_white_8dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_monitor_recommend_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/monitor_recommend_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            tools:text="鞋狗必备"
            android:textColor="@color/color_text_black1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/monitor_arrow_right" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/monitor_channels_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_monitor_recommend_item_header"
        android:orientation="vertical" />

</RelativeLayout>