<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_item_root"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:clipChildren="false"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:shapeAppearanceOverlay="@style/r4ImageStyle" />

        <ImageView
            android:id="@+id/maintain_mark_tv"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/shape_yellow_circle"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="22dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="国区 SNKRS 上新"
            android:textColor="@color/color_text_black1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rule_effect_tv"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:gravity="center_vertical"
            android:text="已自定义规则"
            android:textColor="#1DBA5C"
            android:textSize="9sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="@drawable/drawer_item_msg_count_bg"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="#FFFFFFFF"
        android:textSize="10sp"
        tools:text="4" />


</LinearLayout>