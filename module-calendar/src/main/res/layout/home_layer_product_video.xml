<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/video_layer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:text="视频"
        android:textColor="@color/color_text_black1"
        android:textSize="@dimen/text_size5"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/r_4_white_3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp">


            <cool.dingstock.imagepicker.views.roundImageView.RoundImageView
                android:id="@+id/video_frame_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:border_conner="3dp"
                app:view_type="type_round" />


            <FrameLayout
                android:id="@+id/video_player_fra"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/c_a30_black_bg">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/icon_video_b" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/video_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:lines="2"
            android:textColor="@color/calendar_more_video_desc_txt_color"
            android:textSize="12sp"
            tool:text="Air Jordan  Jordan IV是该n IV是该n IV是该n系…" />


        <FrameLayout
            android:id="@+id/more_fra"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:visibility="visible">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/divider_line" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:src="@drawable/more_video_icon" />


        </FrameLayout>


        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

    </LinearLayout>


</LinearLayout>