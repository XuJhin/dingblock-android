<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cool.dingstock.calendar">

    <application
        android:name=".app.CalendarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/calendar_test_name"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/DcAppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup,android:networkSecurityConfig,android:label,android:theme">
        <activity android:name=".sneaker.heavy.HeavySneakersActivity" />

        <activity
            android:name="cool.dingstock.calendar.sneaker.product.HomeProductDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DcAppThemeBlack" />
        <activity
            android:name=".ui.raffle.HeavyReleaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="cool.dingstock.calendar.sms.HomeSmsEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DcAppThemeBlack"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".sneaker.CalendarIndexActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="812" />

    </application>

</manifest>