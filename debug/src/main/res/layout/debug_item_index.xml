<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="5dp"
    android:paddingStart="14dp"
    android:paddingEnd="6dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/debug_item_index_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="title"
        android:textSize="14sp" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/debug_item_index_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/debug_item_index_link_icon"
        android:textSize="14sp" />

    <cool.dingstock.appbase.widget.IconTextView
        android:id="@+id/debug_item_index_link_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/icon_more"
        android:textSize="16dp" />


</RelativeLayout>