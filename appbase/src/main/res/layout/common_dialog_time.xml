<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/common_item_bg_radius_12"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="20dp">


        <TextView
            android:id="@+id/common_dialog_time_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:text="title"
            android:textColor="@color/color_text_black2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/common_dialog_time_content_txt"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:lineSpacingExtra="3dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:textColor="@color/common_txt_color2"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/common_dialog_time_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/common_selector_bg_radius_20"
            android:paddingStart="27dp"
            android:paddingTop="10dp"
            android:paddingEnd="27dp"
            android:paddingBottom="10dp"
            android:text="btn"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>