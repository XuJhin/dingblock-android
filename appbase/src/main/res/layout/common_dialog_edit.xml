<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="38dp"
    android:focusable="true"
    android:paddingStart="38dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_item_bg_radius_12"
        android:orientation="vertical">


        <TextView
            android:id="@+id/common_edit_dialog_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_text_black1"
            android:textSize="16sp"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/common_edit_dialog_edit"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="@color/color_text_black1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blackAlpha10"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blackAlpha10"
            android:layout_marginTop="30dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="26dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/common_edit_dialog_inpositive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/color_text_black1"
                android:textSize="15sp"
                android:gravity="center" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/blackAlpha10"
                />


            <TextView
                android:id="@+id/common_edit_dialog_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_text_black1"
                android:textSize="15sp"
                />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>