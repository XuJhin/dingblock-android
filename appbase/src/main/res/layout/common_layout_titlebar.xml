<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/common_titlebar_left_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:tint="@color/color_text_black1"
        android:layout_above="@+id/common_titlebar_bottom_line"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:padding="3dp" />

    <cool.dingstock.appbase.widget.IconTextView
        android:id="@+id/common_titlebar_left_txt"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/common_titlebar_bottom_line"
        android:layout_alignParentLeft="true"
        android:textColor="@color/color_text_black1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/common_titlebar_bottom_line"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <cool.dingstock.appbase.widget.IconTextView
            android:id="@+id/common_titlebar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/color_text_black1"
            android:singleLine="true" />


        <cool.dingstock.appbase.widget.IconTextView
            android:id="@+id/common_titlebar_title_icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/common_txt_color1"
            android:textSize="20dp"
            android:visibility="gone" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/common_titlebar_right_layer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/common_titlebar_bottom_line"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical">

        <cool.dingstock.appbase.widget.IconTextView
            android:id="@+id/common_titlebar_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_black1"
            android:gravity="center" />

    </RelativeLayout>

    <View
        android:id="@+id/common_titlebar_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_titleBar_light_line"
        android:visibility="invisible" />

</RelativeLayout>