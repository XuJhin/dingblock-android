<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:layout_constraintCircleRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cool.dingstock.appbase.widget.videoview.DCSurface
            android:id="@+id/common_view_video_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/common_view_video_error_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="播放错误"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/common_view_video_first_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <View
            android:id="@+id/common_view_video_mask_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_video_cover_mask"
            />


        <ImageView
            android:id="@+id/common_view_video_play_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_video_play" />

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="#D6D6D6"
            android:visibility="gone" />
        <!--            style="@style/PB_Style"-->

    </RelativeLayout>


</androidx.cardview.widget.CardView>
