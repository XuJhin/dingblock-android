<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_out"
    android:layout_width="198dp"
    android:layout_height="90dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/suspend_window_view_black_radius_10">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/time_btn_close" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cool.dingstock.appbase.customerview.suspendwindow.SuspendWindow
            android:id="@+id/content_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <cool.dingstock.appbase.customerview.suspendwindow.ScaleImage
        android:id="@+id/scale_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="22dp"
        android:paddingTop="22dp"
        android:paddingEnd="0dp"
        android:src="@drawable/btn_zoom" />

</FrameLayout>
