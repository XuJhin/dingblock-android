<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <cool.dingstock.appbase.widget.subsampling.SubsamplingScaleImageView
        android:id="@+id/common_activity_clip_siv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_black" />

    <cool.dingstock.appbase.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/common_gray"
        titlebar:hideLine="true"
        titlebar:leftIconColor="@color/white"
        titlebar:titleTextColor="@color/white" />


    <cool.dingstock.appbase.widget.clip.ClipView
        android:id="@+id/common_activity_clip_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray">

        <TextView
            android:id="@+id/common_activity_clip_done_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/common_done"
            android:textColor="@color/common_dc_theme_color"
            android:textSize="14sp" />


    </RelativeLayout>

</RelativeLayout>