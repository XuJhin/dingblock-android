<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-45%"
            android:pivotY="90%">
            <shape android:shape="rectangle">
                <size
                    android:width="15dp"
                    android:height="15dp" />
                <solid android:color="@color/vip_bg2" />
                <stroke
                    android:width="1.5dp"
                    android:color="#FBE3C6" />
            </shape>
        </rotate>
    </item>
</layer-list>