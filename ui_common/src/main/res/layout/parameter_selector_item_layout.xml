<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择尺码"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/color_text_black1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        />

    <View
        android:id="@+id/bg_v"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/calendar_parameter_selector_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <TextView
        android:id="@+id/value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择"
        android:textSize="12sp"
        android:textColor="@color/color_text_black4"
        app:layout_constraintTop_toTopOf="@id/bg_v"
        app:layout_constraintBottom_toBottomOf="@id/bg_v"
        app:layout_constraintStart_toStartOf="@id/bg_v"
        android:layout_marginStart="12dp"
        />


    <ImageView
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/common_svg_right_arrow"
        app:layout_constraintTop_toTopOf="@id/bg_v"
        app:layout_constraintBottom_toBottomOf="@id/bg_v"
        app:layout_constraintEnd_toEndOf="@id/bg_v"
        android:layout_marginEnd="15dp"
        app:tint="@color/color_text_black3"
        />



</androidx.constraintlayout.widget.ConstraintLayout>