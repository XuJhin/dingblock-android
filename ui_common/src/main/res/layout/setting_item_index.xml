<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_item"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/setting_card_all_bg">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/default_avatar"
        android:tint="@color/color_text_black1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="45dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_item_index_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_black1"
            android:textSize="16sp"
            tools:text="sfafa" />


        <TextView
            android:id="@+id/setting_item_index_des_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_txt_color2"
            android:textSize="12sp"
            tools:text="sfafa" />

    </LinearLayout>


    <cool.dingstock.appbase.widget.IconTextView
        android:id="@+id/setting_item_index_more_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/icon_more"
        android:textColor="@color/setting_next_icon_color"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/setting_item_index_value_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="2dp"
        android:layout_toLeftOf="@+id/setting_item_index_more_icon"
        android:includeFontPadding="false"
        android:textColor="@color/color_text_black4"
        android:textSize="@dimen/text_size6" />

    <cool.dingstock.appbase.widget.switchbutton.SwitchButton
        android:id="@+id/setting_item_index_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        app:kswAnimationDuration="300"
        app:kswBackDrawable="@drawable/ios_back_drawable"
        app:kswThumbColor="@color/color_text_absolutely_white" />


</RelativeLayout>