<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_item_region_raffle_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/common_item_bg_radius_8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_item_region_raffle_product_iv"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerInside"
        tools:src="@color/color_blue_1" />

    <RelativeLayout
        android:id="@+id/home_item_region_raffle_text_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="23dp"
        android:layout_toRightOf="@id/home_item_region_raffle_product_iv"
        android:orientation="vertical">

        <cool.dingstock.lib_base.widget.tv.font.PoppinsBoldTv
            android:id="@+id/home_item_region_raffle_product_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/popin_line_space"
            android:lineSpacingMultiplier="1"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/color_text_black2"
            android:textSize="@dimen/text_size4"
            android:textStyle="bold"
            tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_item_region_raffle_product_name_txt"
            android:layout_marginTop="14dp"
            android:baselineAligned="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_item_region_raffle_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5条"
                    android:textColor="@color/color_text_black2"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="发售"
                    android:textColor="@color/color_text_black4"
                    android:textSize="11sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_item_region_raffle_product_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5条"
                    android:textColor="@color/color_text_black2"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="发售价"
                    android:textColor="@color/color_text_black4"
                    android:textSize="11sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/market_price_layer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/market_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1838"
                    android:textColor="@color/color_text_black2"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="市场价"
                        android:textColor="@color/color_text_black4"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="12dp"
                        android:src="@drawable/common_svg_right_arrow"
                        app:tint="@color/color_text_black4" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view_space"
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/market_deal_layer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1条"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/color_text_black2"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易"
                        android:textColor="@color/color_text_black4"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="12dp"
                        android:src="@drawable/common_svg_right_arrow"
                        app:tint="@color/color_text_black4" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/home_item_region_raffle_comment_all_layer"
        layout="@layout/home_region_raffle_comment_layer"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/home_item_region_raffle_text_layer"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:id="@+id/home_item_region_raffle_detail_fra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_item_region_raffle_comment_all_layer"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_good_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="13dp"
            android:maxLines="1"
            android:text="货号  29094-100"
            android:textColor="@color/color_text_black4"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_item_region_raffle_detail_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

    </LinearLayout>


</RelativeLayout>