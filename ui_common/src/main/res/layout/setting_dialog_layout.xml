<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_disturb_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/setting_set_up_disturb" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@color/monitor_setting_time" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <NumberPicker
                    android:id="@+id/setting_dialog_start_picker"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants" />

                <NumberPicker
                    android:id="@+id/setting_dialog_center_picker"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants" />


                <NumberPicker
                    android:id="@+id/setting_dialog_end_picker"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants" />

            </LinearLayout>


        </FrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line_color2" />

        <TextView
            android:id="@+id/setting_dialog_open_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/setting_confirm_disturb"
            android:textColor="@color/color_blue"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line_color2" />
    </LinearLayout>


    <TextView
        android:id="@+id/setting_dialog_cancel_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/setting_disturb_bg"
        android:gravity="center"
        android:text="@string/common_cancel"
        android:textColor="@color/color_blue"
        android:textSize="16sp" />


</LinearLayout>