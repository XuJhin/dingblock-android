<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="72dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    tools:background="@color/blackAlpha30">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/calendar_sms_person_item_bg"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="钉小茶"
        android:textColor="@color/sms_person_txt_color"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/vip_tag"
        android:layout_width="29dp"
        android:layout_height="8dp"
        android:src="@drawable/calendar_sms_vip_tag_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/triangle_iv"
        android:layout_width="17dp"
        android:layout_height="8dp"
        android:src="@drawable/calendar_ic_sms_registrtion_top_triangle"
        app:tint="@color/color_sec_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>