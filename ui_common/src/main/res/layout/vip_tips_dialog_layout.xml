<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/dialog_cover"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/vip_tips_dialog_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_close_vip_dialog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/monitor_icon_close_vip"
        app:layout_constraintEnd_toEndOf="@+id/dialog_cover"
        app:layout_constraintStart_toStartOf="@+id/dialog_cover"
        app:layout_constraintTop_toBottomOf="@+id/dialog_cover" />

</androidx.constraintlayout.widget.ConstraintLayout>